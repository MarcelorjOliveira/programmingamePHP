<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="pasinter_admanager.campaign_extension.class">Application\Pasinter\AdManagerBundle\Twig\CampaignExtension</parameter>
    </parameters>

    <services>
        <service id="pasinter_admanager.admanager_extension" class="%pasinter_admanager.campaign_extension.class%" public="false">
            <tag name="twig.extension" />
            <call method="setContainer"><argument type="service" id="service_container" /></call>
        </service>

    </services>

</container>
