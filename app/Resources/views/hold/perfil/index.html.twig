{% extends 'layout/hold.html.twig' %}

{% block conteudoHold %}
    <div id = 'perfil'>
        <div class='col-lg-9'>
            <style type = "text/css">

                #informacoes {
                    height: 56em; 
                    background-color: #ffffff;
                }

                #timeline {
                    height: 56em; 
                    background-color: #ffffff
                }

                #botaoPerfil {
                    position: absolute;
                    top: 20%;
                    right: 8%;
                }

                #menuPerfil {
                    width: 100%;
                }

                #rostoPerfil {
                    position: absolute ;
                    top: 15%;
                    left: 8%;
                }


                #navBarPerfil {
                    background-color: #FFFFFF;
                    font-size: 1em;
                    font-weight: bold;
                }

                @media (min-width: 320px) and (max-width: 767px) {
                    #rostoPerfil {
                        width: 60px;
                        height: 90px;
                        position: relative;
                        top: 79px;
                        bottom: 0;
                        left: 0;

                        margin-left: 41%;
                        margin-right: 41%;
                    }

                    #capaPerfil {
                        height: 169px;
                    }
                }

            </style>
            {% include 'layout/hold/capaComPerfil.html.twig' %}
            <div id="corpoPerfil">
                <div id="informacoes" class="col-sm-3" style="">
                    <div class= "panel panel-default">
                        <div class="panel-heading"><span id="iconeSobrePerfil"class="glyphicon glyphicon-user">
                            </span><h3 id="tituloSobrePerfil">Sobre</h3>
                        </div>
                        <div class="panel-body">
                            <br>
                            <h3>Nome</h3>
                            <hr></hr>
                            <p>{{ objetoSymfonyUser.titulo }}</p><br>
                            <h3>Cidade</h3>
                            <hr></hr>
                            <p>{{ objetoSymfonyUser.cidade}}, {{objetoSymfonyUser.uf}}
                            <h3>Data de Nascimento</h3>
                            <hr></hr>
                            <p>{{ objetoSymfonyUser.dataNascimentoString}} ({{objetoSymfonyUser.idadeString}})</p><br>
                            <h3>Perfil</h3>
                            <hr></hr>
                            <p>{{objetoSymfonyUser.regraString}}</p><br>
                            {% if objetoSymfonyUser.regra == 'INVESTIDOR' %}
                                <h3>Ramo</h3>
                                <hr></hr>
                                <p>Esportes</p><br>	
                            {% endif %}
                        </div>
                    </div>			
                </div>
                <div id="timeline" class="col-sm-9">			
                </div>
            </div> 		
        </div>
    </div>

{% endblock %}

{% block propagandaHold %}
{% endblock %}
